
<div class="text-center" style="margin: 20px auto">
    <img src="" style="height: 200px; width: 200px;" />
</div>

<div class="container text-center">
    <div class="row">
        <div class="col-md-6">
            <h3>To Be Devoured...</h3>
            <div class="devour">
                
                    {{#each burgers}}
                        {{#unless devoured}}

                            {{> burgers/burger-block }}

                        {{/unless}}
                    {{/each}}

            </div>
        </div>
        <div class="col-md-6">
            <h3>Devoured</h3>
            <div class="devour">
                
                    {{#each burgers}}
                        {{#if devoured}}

                            {{> burgers/burger-block }}

                        {{/if}}
                    {{/each}}

            </div>
        </div>
    </div>
    <div style="margin-top: 20px;">
        <h2>Add a burger</h2>
        <form class="create-form">
            <div class="form-group">
                <textarea 
                    id="burger" 
                    name="burger_name" 
                    placeholder="Enter the buger you want to eat..." 
                    maxlength="255"
                ></textarea>
            </div>

            <button type="submit">Add Burger!</button>
        </form>
    </div>
</div>

    


