
<h3>NOT devoured</h3>
<ul>
    {{#each burgers}}
        {{#unless devoured}}

            {{> burgers/burger-block }}
            
        {{/unless}}
    {{/each}}

</ul>

<h3>devoured</h3>
<ul>
    {{#each burgers}}
        {{#if devoured}}

            {{> burgers/burger-block }}

        {{/if}}
    {{/each}}

</ul>

<h2>Add a burger</h2>
<form class="create-form">
    <div class="form-group">
        <textarea 
            id="burger" 
            name="burger_name" 
            placeholder="Enter the buger you want to eat..." 
            maxlength="64"
        ></textarea>
    </div>

    <button type="submit">Add Burger!</button>
</form>
